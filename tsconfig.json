{
  "compilerOptions": {
    "declaration": true,
    "lib": ["es6", "dom", "dom.iterable"],
    "moduleResolution": "node",
    "removeComments": true,
    "sourceMap": true,
    "target": "es2017",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "noImplicitAny": false
  },
  "include": [
    "src/**/*",
    "converter/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
